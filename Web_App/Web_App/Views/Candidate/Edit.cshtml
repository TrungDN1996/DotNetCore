@model Web_App.ViewModels.CandidateEditViewModel

@{
    ViewData["Title"] = "Edit Candidate";
    var list = ViewData["VacanciesList"] as List<SelectListItem>;
}

@section header {
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Candidate" asp-action="Index">Web_App</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Candidate" asp-action="Index">Candidate List</a>
                    </li>
                    <li>
                        <a asp-action="Login" asp-controller="Home"><button type="submit" class="btn btn-primary">Logout</button></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}

<h3 style="margin-top: 20px; margin-bottom:50px">Edit Candidate</h3>
<form asp-action="Edit" asp-controller="Candidate" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden">
    <div class="form-row col-md-6">
        <div class="form-group col-md-12">
            <label asp-for="Name">Name<em style="color: red">*</em></label>
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="VacancyId">Vacancy<em style="color: red">*</em></label>
            <select asp-for="VacancyId" asp-items="@list" class="form-control">
                <option selected>Choose...</option>
            </select>
            <span asp-validation-for="VacancyId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Phone">Phone</label>
            <input asp-for="Phone" type="text" class="form-control">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Avatar">Avatar</label>
            @{
                if (Model.Avatar != null)
                {
                    <div class="row" style="margin-bottom: 10px; margin-left: 1px">
                        <img src="@Model.Avatar" style="width: 80px; height: 80px"/>
                    </div>
                }
            }
            <div class="custom-file">
                <input type="file" class="custom-file-input" asp-for="Avatar" aria-describedby="avatar">
                <label class="custom-file-label" asp-for="Avatar">Choose file</label>
            </div>
        </div>
    </div>
    <div class="form-row col-md-6">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

